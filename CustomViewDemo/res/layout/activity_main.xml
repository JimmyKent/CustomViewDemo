<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btn_large_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载超大图" />

    <Button
        android:id="@+id/btn_measure_once"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义布局让onMeasure只计算一次" />

    <Button
        android:id="@+id/btn_flow_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流式布局" />

    <Button
        android:id="@+id/btn_aige_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会动的圆" />

    <Button
        android:id="@+id/btn_aige_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色变换" />

    <Button
        android:id="@+id/btn_aige_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AvoidXAty" />

    <Button
        android:id="@+id/btn_porterduff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PorterDuff" />

    <Button
        android:id="@+id/btn_porterduff2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PorterDuff2" />

    <Button
        android:id="@+id/btn_eraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="橡皮泥效果" />
    <Button
        android:id="@+id/btn_multicircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多圆圈" />

</LinearLayout>